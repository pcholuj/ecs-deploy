{
    "compilerOptions": {
        "lib": [
            "es5",
            "es6"
        ],
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "allowJs": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "paths": {
            "@app/*": [
                "*"
            ],
            "@providers/*": [
                "./providers/*"
            ],
            "@api/*": [
                "./api/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dashboard",
        "node_modules",
        "**/*.spec.ts"
    ]
}